<UserControl x:Class="Reviser.Controller"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignWidth="80" d:DesignHeight="40"
             Height="40"
             Cursor="Hand" FontSize="13"
             FontFamily="pack://application:,,,/Fonts/#v_DistrictTF-Regular"      
             HorizontalAlignment="Stretch" VerticalAlignment="Top"
             Loaded="Controller_Loaded"
             MouseLeftButtonUp="Controller_MouseLeftButtonUp"
             MouseLeftButtonDown="Controller_MouseLeftButtonDown"
             MouseEnter="Controller_MouseEnter"
             MouseLeave="Controller_MouseLeave" >
    <Grid>
        <Rectangle Name="Shadow" 
                   Margin="2,2,0,0"
                   StrokeThickness="1.5"
                   Fill="{Binding BackColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Stroke="Black"  
                   Width="{Binding FigurelWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Height="36"
                   RadiusX="4" RadiusY="4" />
        
        <Rectangle Name="Figure" 
                   StrokeThickness="1.5"
                   Fill="{Binding BackColor}"
                   Stroke="Black"  
                   Width="{Binding FigurelWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Height="36"
                   RadiusX="4" RadiusY="4" />

        <TextBlock Name="CommandText"
                   Margin="15,0,15,0"
                   Foreground="{Binding TextColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Text="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}"        
                   TextAlignment="Center" 
                   VerticalAlignment="Center" />
    </Grid>
</UserControl>


<UserControl x:Class="Reviser.Option"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignWidth="80" d:DesignHeight="26"
             Height="26"
             Margin="0,0,-2,0"
             Cursor="Hand" FontSize="13"
             FontFamily="pack://application:,,,/Fonts/#v_DistrictTF-Regular"      
             HorizontalAlignment="Stretch" VerticalAlignment="Center"
             Loaded="Option_Loaded"
             MouseLeftButtonUp="Option_MouseLeftButtonUp"
             MouseEnter="Option_MouseEnter"
             MouseLeave="Option_MouseLeave" >
    <Grid>
        <Rectangle Name="Figure" 
                   StrokeThickness="1"
                   Fill="{Binding BackColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Stroke="Black"  
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch" />

        <TextBlock Name="CommandText"
                   Margin="10,0,10,0"
                   Foreground="{Binding TextColor, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Text="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}"        
                   TextAlignment="Center" 
                   VerticalAlignment="Center" />
    </Grid>
</UserControl>


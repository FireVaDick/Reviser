<Window x:Class="Reviser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reviser"
        mc:Ignorable="d"
        Title="Главное меню"
        Width="1550" Height="800"
        MinWidth="1220" MinHeight="500"
        d:DesignWidth="1220" d:DesignHeight="500"
        FontFamily="v_DistrictTF-Regular" FontSize="16"
        Background="#dddfe9"
        KeyDown="MainWindow_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>



        <!--Столбик Image-->
        <Border Grid.Row="0" Grid.Column="0"
                Margin="15,15,0,10"
                Background="#fff"
                BorderBrush="#1c2541"
                BorderThickness="1.8"
                CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Text="Превью изображения"
                          Grid.Row="0"
                          Foreground="#1c2541"
                          HorizontalAlignment="Center"
                          Margin="10,10,10,0"/>

                <!-- Область изображения -->
                <Border Grid.Row="1"
                        Margin="10"
                        Background="#f8f9fa"
                        BorderBrush="#dee2e6"
                        BorderThickness="1.8"
                        CornerRadius="10">
                    <Viewbox Margin="10"
                             Stretch="Uniform" 
                             MaxWidth="600" 
                             MaxHeight="800">
                        <Image x:Name="PreviewImage"
                               Source="{Binding PreviewImageSource}"
                               Stretch="Uniform"/>
                    </Viewbox>
                </Border>

                <!-- Информация о изображении -->
                <StackPanel Grid.Row="2" Margin="15,0,10,15">
                    <TextBlock x:Name="PreviewFileName"
                               TextWrapping="Wrap"
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="PreviewResolution"
                               FontSize="12"
                               Foreground="#666"/>
                    <TextBlock x:Name="PreviewFileSize"
                               FontSize="12"
                               Foreground="#666"/>
                    <TextBlock x:Name="PreviewFormat"
                               FontSize="12"
                               Foreground="#666"/>
                </StackPanel>

                <!-- Сообщение когда нет выбора -->
                <TextBlock x:Name="NoPreviewText"
                           Grid.Row="1"
                           Text="Выберите изображение для просмотра"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           Foreground="#999"
                           FontStyle="Italic"
                           Visibility="Visible"/>
            </Grid>
        </Border>



        <!--Столбик Info-->
        <DataGrid x:Name="ImageGrid"
                  Grid.Row="0" Grid.Column="1"
                  Margin="15,15,15,10"
                  IsReadOnly="True"
                  RowDetailsVisibilityMode="Collapsed"
                  AutoGenerateColumns="False"
                  MinRowHeight="22"           
                  Background="#fff"
                  VerticalGridLinesBrush="#1c2541"
                  HorizontalGridLinesBrush="#1c2541"
                  VerticalAlignment="Stretch"
                  VirtualizingStackPanel.IsVirtualizing="False"
                  FontSize="16"
                  FontFamily="pack://application:,,,/Fonts/#v_DistrictTF-Regular"
                  MouseDoubleClick="ImageGrid_MouseDoubleClick"
                  SelectionChanged="ImageGrid_SelectionChanged">
            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" 
                                 Color="#568CF7"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey }" 
                                 Color="#90B1F3"/>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Index}" 
                                    Header="Ном." 
                                    Width="55"/>
                <DataGridTextColumn Binding="{Binding FileName}" 
                                    Header="Имя"
                                    Width="*"/>
                <DataGridTextColumn Binding="{Binding Resolution}"
                                    Header="Разрешен."
                                    Width="100"/>

                <DataGridTemplateColumn Header="" Width="30" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <!-- Минималистичный индикатор -->
                            <Border Width="20" Height="20" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                                <Border Background="#1c2541" 
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Width="{Binding IndicatorWidth}"
                                        Height="{Binding IndicatorHeight}"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Binding="{Binding AspectRatio}"
                                    Header="Соотнош." 
                                    Width="90"/>
                <DataGridTextColumn Binding="{Binding FileSize}"
                                    Header="Размер" 
                                    Width="90"/>
                <DataGridTextColumn Binding="{Binding Format}"
                                    Header="Формат"
                                    Width="90"/>
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#e9ebf5"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding BackColor}" Value="#000">
                            <Setter Property="Background" Value="#a2d2ff"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding BackColor}" Value="#001">
                            <Setter Property="Background" Value="#ffafcc"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <StackPanel Grid.Row="1" Grid.Column="1"
                    Margin="0,0,0,15"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <local:Controller x:Name="ChooseImage"
                              GlobalWidth="140" FigureWidth="130"
                              Purpose="Action"                      
                              Command="Выбрать файл"
                              MouseLeftButtonDown="ChooseImage_MouseLeftButtonDown" />

            <local:Controller x:Name="LoadFullTable"
                              GlobalWidth="160" FigureWidth="150"
                              Purpose="Action"                      
                              Command="Загрузить таблицу"
                              MouseLeftButtonDown="LoadFullTable_MouseLeftButtonDown" />

            <local:Controller x:Name="GetNoAuthor"
                              GlobalWidth="115" FigureWidth="105"
                              Purpose="Action"                      
                              Command="Без автора"
                              MouseLeftButtonDown="GetNoAuthor_MouseLeftButtonDown" />
        </StackPanel>

        

        <!--Столбик Move-->
        <Grid Name="MoveGrid" 
              Grid.Row="0" Grid.Column="2"
              Margin="0,15,15,15"
              Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="125" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="125" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Margin="0,10,0,0"
                           Text="Перестановка:"
                           VerticalAlignment="Top"/>
                <TextBox Grid.Column="1"
                         TextWrapping="Wrap"
                         x:Name="TemplateTextBox" 
                         Text="{Binding NameMoveTemplate, 
                                UpdateSourceTrigger=PropertyChanged,
                                Mode=TwoWay}"/>
            </Grid>

            <DataGrid x:Name="ImageNameFilesMoveGrid" 
                      Grid.Row="2" 
                      Margin="0,10,0,0"
                      IsReadOnly="True"
                      RowDetailsVisibilityMode="Collapsed"
                      AutoGenerateColumns="False"
                      MinRowHeight="22"           
                      Background="#fff"
                      VerticalGridLinesBrush="#1c2541"
                      HorizontalGridLinesBrush="#1c2541"
                      VerticalAlignment="Stretch"
                      VirtualizingStackPanel.IsVirtualizing="False"
                      FontSize="16"
                      FontFamily="pack://application:,,,/Fonts/#v_DistrictTF-Regular" 
                      SelectionChanged="MoveGrid_SelectionChanged">
                <DataGrid.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" 
                                     Color="#568CF7"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey }" 
                                     Color="#90B1F3"/>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Index}" 
                                        Header="Ном." 
                                        Width="55"/>
                    <DataGridTextColumn Binding="{Binding OriginalName}" Visibility="Hidden"
                                        Header="Оригинал" 
                                        Width="*"/>
                    <DataGridTextColumn Binding="{Binding NewName}" 
                                        Header="Новое имя"
                                        Width="*"/>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#e9ebf5"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding BackColor}" Value="#000">
                                <Setter Property="Background" Value="#a2d2ff"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding BackColor}" Value="#001">
                                <Setter Property="Background" Value="#ffafcc"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>

            <StackPanel Grid.Row="3"
                        Margin="0,10,0,0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top">
                <local:Controller GlobalWidth="145" FigureWidth="135"
                                  Purpose="Action"                      
                                  Command="Предпросмотр"
                                  MouseLeftButtonDown="PreviewMove_MouseLeftButtonDown" />

                <local:Controller GlobalWidth="150" FigureWidth="140"
                                  Purpose="Action"                      
                                  Command="Переименовать"
                                  MouseLeftButtonDown="RenameMove_MouseLeftButtonDown" />
            </StackPanel>
        </Grid>



        <!--Столбик Replace-->
        <Grid Name="ReplaceGrid" 
              Grid.Row="0" Grid.Column="2"
              Margin="0,15,15,15"
              Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="50" />
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="115" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Margin="0,10,0,0"
                           Text="Найти слово:"
                           VerticalAlignment="Top"/>
                <TextBox Grid.Column="1"
                         TextWrapping="Wrap"
                         x:Name="FindTextBox" 
                         Text="{Binding FindTemplate, 
                                        UpdateSourceTrigger=PropertyChanged,
                                        Mode=TwoWay}"/>
            </Grid>


            <Grid Grid.Row="1" 
                  Margin="0,10,0,0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="115" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Margin="0,10,0,0"
                           Text="Заменить на:"
                           VerticalAlignment="Top"/>
                <TextBox Grid.Column="1"
                         TextWrapping="Wrap"
                         x:Name="ReplaceTextBox" 
                         Text="{Binding ReplaceTemplate, 
                                        UpdateSourceTrigger=PropertyChanged,
                                        Mode=TwoWay}"/>
            </Grid>

            <StackPanel Grid.Row="2"
                        Margin="0,15,0,0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="PositionStart"                            
                                 Content="Начало" 
                                 GroupName="PositionGroup" />
                    <RadioButton x:Name="PositionMiddle"
                                 Margin="10,0,0,0"
                                 Content="Середина" 
                                 GroupName="PositionGroup"  />
                    <RadioButton x:Name="PositionEnd"
                                 Margin="10,0,0,0"
                                 IsChecked="True"
                                 Content="Конец" 
                                 GroupName="PositionGroup" />
                </StackPanel>
            </StackPanel>

            <DataGrid x:Name="ImageNameFilesReplaceGrid" 
                      Grid.Row="3" 
                      Margin="0,10,0,0"
                      IsReadOnly="True"
                      RowDetailsVisibilityMode="Collapsed"
                      AutoGenerateColumns="False"
                      MinRowHeight="22"           
                      Background="#fff"
                      VerticalGridLinesBrush="#1c2541"
                      HorizontalGridLinesBrush="#1c2541"
                      VirtualizingStackPanel.IsVirtualizing="False"
                      FontSize="16"
                      FontFamily="pack://application:,,,/Fonts/#v_DistrictTF-Regular"
                      SelectionChanged="ReplaceGrid_SelectionChanged">
                <DataGrid.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" 
                                     Color="#568CF7"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey }" 
                                     Color="#90B1F3"/>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Index}" 
                            Header="Ном." 
                            Width="55"/>
                    <DataGridTextColumn Binding="{Binding OriginalName}" Visibility="Hidden"
                            Header="Оригинал" 
                            Width="*"/>
                    <DataGridTextColumn Binding="{Binding NewName}" 
                            Header="Новое имя"
                            Width="*"/>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#e9ebf5"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding BackColor}" Value="#000">
                                <Setter Property="Background" Value="#a2d2ff"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding BackColor}" Value="#001">
                                <Setter Property="Background" Value="#ffafcc"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>

            <StackPanel Grid.Row="5"
                        Margin="0,10,0,0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top">
                <local:Controller GlobalWidth="145" FigureWidth="135"
                                  Purpose="Action"                      
                                  Command="Предпросмотр"
                                  MouseLeftButtonDown="PreviewReplace_MouseLeftButtonDown" />

                <local:Controller GlobalWidth="150" FigureWidth="140"
                                  Purpose="Action"                      
                                  Command="Переименовать"
                                  MouseLeftButtonDown="RenameReplace_MouseLeftButtonDown" />
            </StackPanel>


        </Grid>



        <!--Внизу-->
        <local:Controller x:Name="Cancel"
                          Grid.Row="1" Grid.Column="1"
                          Margin="0,0,15,15"
                          GlobalWidth="45" FigureWidth="35"
                          Purpose="Action"                      
                          Command="||"
                          Visibility="Collapsed"
                          HorizontalAlignment="Right"
                          MouseLeftButtonDown="Cancel_MouseLeftButtonDown" />

        <TextBlock Name="Count" 
                   Grid.Row="3" Grid.Column="1"
                   Margin="25,0,0,10"
                   Width="150" Height="24"  
                   HorizontalAlignment="Left"
                   TextAlignment="Left" />

        <TextBlock Name="SelectedFolder"
                   Grid.Row="3" 
                   Margin="25,0,0,10"
                   Text="Папка не выбрана"
                   Height="24"  
                   HorizontalAlignment="Left"
                   TextAlignment="Left" />
    </Grid>
</Window>

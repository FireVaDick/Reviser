<Window x:Class="Reviser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reviser"
        mc:Ignorable="d"
        Title="Главное меню"
        Width="1260" Height="600"
        MinWidth="1260" MinHeight="600"
        d:DesignWidth="1260" d:DesignHeight="600"
        FontSize="16"
        FontFamily="pack://application:,,,/Fonts/#v_DistrictTF-Regular"      
        Background="#dddfe9"
        KeyDown="MainWindow_KeyDown">
    <Window.Resources>
        <Style x:Key="ImageDataGridStyle" TargetType="DataGrid">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="RowDetailsVisibilityMode" Value="Collapsed"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="MinRowHeight" Value="22"/>
            <Setter Property="Background" Value="#fff"/>
            <Setter Property="VerticalGridLinesBrush" Value="#1c2541"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#1c2541"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="VirtualizingStackPanel.IsVirtualizing" Value="False"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#v_DistrictTF-Regular"/>
        </Style>

        <Style x:Key="ImageDataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="#e9ebf5"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding BackColor}" Value="#001">
                    <Setter Property="Background" Value="#EBEBEB"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding BackColor}" Value="#002">
                    <Setter Property="Background" Value="#9CFF98"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding BackColor}" Value="#003">
                    <Setter Property="Background" Value="#FFFB83"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding BackColor}" Value="#004">
                    <Setter Property="Background" Value="#FCB5D7"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding BackColor}" Value="#005">
                    <Setter Property="Background" Value="#F8B079"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding BackColor}" Value="#006">
                    <Setter Property="Background" Value="#EC6A7A"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <SolidColorBrush x:Key="DataGridHighlightBrush" Color="#87ABF4"/>
        <SolidColorBrush x:Key="DataGridInactiveSelectionHighlightBrush" Color="#AEC2EB"/>
        <SolidColorBrush x:Key="DataGridHighlightTextBrush" Color="Black"/>
        <SolidColorBrush x:Key="DataGridInactiveSelectionHighlightTextBrush" Color="Black"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

      
        <!-- Левый столбик фото -->
        <Grid Grid.Row="1" Grid.Column="0"
              Margin="15,15,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" 
                        Margin="0,0,0,10"
                        Orientation="Horizontal" >
                <local:AnyMenuOption x:Name="Class1s"
                                     GroupName="ClassGroup"
                                     Command="1s"
                                     ClickedColor="#EBEBEB"
                                     MouseLeftButtonDown="Class1s_MouseLeftButtonDown" />

                <local:AnyMenuOption x:Name="Class2e"
                                     GroupName="ClassGroup"
                                     Command="2e"
                                     ClickedColor="#9CFF98"
                                     MouseLeftButtonDown="Class2e_MouseLeftButtonDown" />

                <local:AnyMenuOption x:Name="Class3n"
                                     GroupName="ClassGroup"
                                     Command="3n"
                                     ClickedColor="#FFFB83"
                                     MouseLeftButtonDown="Class3n_MouseLeftButtonDown" />

                <local:AnyMenuOption x:Name="Class4c"
                                     GroupName="ClassGroup"
                                     Command="4c"
                                     ClickedColor="#FCB5D7"
                                     MouseLeftButtonDown="Class4c_MouseLeftButtonDown" />

                <local:AnyMenuOption x:Name="Class5j"
                                     GroupName="ClassGroup"
                                     Command="5j"
                                     ClickedColor="#F8B079"
                                     MouseLeftButtonDown="Class5j_MouseLeftButtonDown" />

                <local:AnyMenuOption x:Name="Class6h"
                                     GroupName="ClassGroup"
                                     Command="6h"
                                     ClickedColor="#EC6A7A"
                                     MouseLeftButtonDown="Class6h_MouseLeftButtonDown" />
            </StackPanel>

            <Border Grid.Row="1" 
                    Background="#fff"
                    BorderBrush="black"
                    BorderThickness="1.8"
                    CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок -->
                    <TextBlock Text="Превью изображения"
                              Grid.Row="0"
                              Foreground="Black"
                              HorizontalAlignment="Center"
                              Margin="10,10,10,0"/>

                    <!-- Область изображения -->
                    <Border Grid.Row="1"
                            Margin="10"
                            Background="#f8f9fa"
                            BorderBrush="#dee2e6"
                            BorderThickness="1.8"
                            CornerRadius="10">
                        <Viewbox Margin="10"
                                 Stretch="Uniform" 
                                 MaxWidth="600" 
                                 MaxHeight="800">
                            <Image x:Name="PreviewImage"
                                   Source="{Binding PreviewImageSource}"
                                   Stretch="Uniform"/>
                        </Viewbox>
                    </Border>

                    <!-- Информация о изображении -->
                    <StackPanel Grid.Row="2" Margin="15,0,10,15">
                        <TextBlock x:Name="PreviewFileName"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="PreviewResolution"
                                   FontSize="12"
                                   Foreground="#666"/>
                        <TextBlock x:Name="PreviewFileSize"
                                   FontSize="12"
                                   Foreground="#666"/>
                        <TextBlock x:Name="PreviewFormat"
                                   FontSize="12"
                                   Foreground="#666"/>
                    </StackPanel>

                    <!-- Сообщение когда нет выбора -->
                    <TextBlock x:Name="NoPreviewText"
                               Grid.Row="1"
                               Text="Выберите изображение для просмотра"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"
                               Foreground="#999"
                               FontStyle="Italic"
                               Visibility="Visible"/>
                </Grid>
            </Border>
        </Grid>
        

        <!-- Центральный столбик с таблицами -->
        <Grid Grid.Row="1" Grid.Column="1"
              Margin="15,15,15,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" 
                        Margin="0,0,0,10"
                        Orientation="Horizontal" >
                <local:OneMenuOption x:Name="ShowAllDataGrid"
                                     GroupName="DataGridGroup"
                                     IsChecked="True"
                                     Command="Все изображения"
                                     MouseLeftButtonDown="ShowAllDataGrid_MouseLeftButtonDown" />

                <local:OneMenuOption x:Name="ShowAuthorDataGrid"
                                     GroupName="DataGridGroup"
                                     Command="По авторам"
                                     MouseLeftButtonDown="ShowAuthorDataGrid_MouseLeftButtonDown" />

                <local:OneMenuOption x:Name="ShowTagDataGrid"
                                     GroupName="DataGridGroup"
                                     Command="По тегам"
                                     MouseLeftButtonDown="ShowTagDataGrid_MouseLeftButtonDown" />

                <local:OneMenuOption x:Name="ShowReplaceDataGrid"
                                     GroupName="DataGridGroup"
                                     Command="При замене"
                                     MouseLeftButtonDown="ShowReplaceDataGrid_MouseLeftButtonDown" />

                <local:OneMenuOption x:Name="ShowMoveDataGrid"
                                     GroupName="DataGridGroup"
                                     Command="При перестановке"
                                     MouseLeftButtonDown="ShowMoveDataGrid_MouseLeftButtonDown" />
            </StackPanel>

            <Grid Grid.Row="1">
                <DataGrid x:Name="AllDataGrid"
                          Style="{StaticResource ImageDataGridStyle}"
                          RowStyle="{StaticResource ImageDataGridRowStyle}"
                          MouseDoubleClick="AllDataGrid_MouseDoubleClick"
                          SelectionChanged="AllDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Index}" 
                                            Header="Ном." 
                                            Width="55"/>
                        <DataGridTextColumn Binding="{Binding FileName}" 
                                            Header="Имя"
                                            Width="*"/>
                        <DataGridTextColumn Binding="{Binding Resolution}"
                                            Header="Разрешен."
                                            Width="100"/>

                        <DataGridTemplateColumn Header="" Width="30" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <!-- Минималистичный индикатор -->
                                    <Border Width="20" Height="20" 
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                        <Border Background="#1c2541" 
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Width="{Binding IndicatorWidth}"
                                                Height="{Binding IndicatorHeight}"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Binding="{Binding AspectRatio}"
                                            Header="Соотнош." 
                                            Width="90"/>
                        <DataGridTextColumn Binding="{Binding FileSize}"
                                            Header="Размер" 
                                            Width="90"/>
                        <DataGridTextColumn Binding="{Binding Format}"
                                            Header="Формат"
                                            Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>

                <DataGrid x:Name="AuthorDataGrid"
                          Style="{StaticResource ImageDataGridStyle}"
                          RowStyle="{StaticResource ImageDataGridRowStyle}"
                          MouseDoubleClick="AuthorDataGrid_MouseDoubleClick"
                          SelectionChanged="AuthorDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Index}" 
                                            Header="Ном." 
                                            Width="55"/>
                        <DataGridTextColumn Binding="{Binding FileName}" 
                                            Header="Имя"
                                            Width="*"/>
                        <DataGridTextColumn Binding="{Binding Resolution}"
                                            Header="Разрешен."
                                            Width="100"/>

                        <DataGridTemplateColumn Header="" Width="30" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <!-- Минималистичный индикатор -->
                                    <Border Width="20" Height="20" 
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                        <Border Background="#1c2541" 
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Width="{Binding IndicatorWidth}"
                                                Height="{Binding IndicatorHeight}"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Binding="{Binding AspectRatio}"
                                            Header="Соотнош." 
                                            Width="90"/>
                        <DataGridTextColumn Binding="{Binding FileSize}"
                                            Header="Размер" 
                                            Width="90"/>
                        <DataGridTextColumn Binding="{Binding Format}"
                                            Header="Формат"
                                            Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>

                <DataGrid x:Name="TagDataGrid"
                          Style="{StaticResource ImageDataGridStyle}"
                          RowStyle="{StaticResource ImageDataGridRowStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Index}" 
                                            Header="Ном." 
                                            Width="55"/>
                        <DataGridTextColumn Binding="{Binding FileName}" 
                                            Header="Имя"
                                            Width="*"/>
                        <DataGridTextColumn Binding="{Binding Resolution}"
                                            Header="Разрешен."
                                            Width="100"/>

                        <DataGridTemplateColumn Header="" Width="30" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <!-- Минималистичный индикатор -->
                                    <Border Width="20" Height="20" 
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                        <Border Background="#1c2541" 
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Width="{Binding IndicatorWidth}"
                                                Height="{Binding IndicatorHeight}"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Binding="{Binding AspectRatio}"
                                            Header="Соотнош." 
                                            Width="90"/>
                        <DataGridTextColumn Binding="{Binding FileSize}"
                                            Header="Размер" 
                                            Width="90"/>
                        <DataGridTextColumn Binding="{Binding Format}"
                                            Header="Формат"
                                            Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>

                <DataGrid x:Name="ReplaceDataGrid"
                          Style="{StaticResource ImageDataGridStyle}"
                          RowStyle="{StaticResource ImageDataGridRowStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Index}" 
                                            Header="Ном." 
                                            Width="55"/>
                        <DataGridTextColumn Binding="{Binding OriginalName}" 
                                            Visibility="Hidden"
                                            Header="Оригинал" 
                                            Width="*"/>
                        <DataGridTextColumn Binding="{Binding NewName}" 
                                            Header="Новое имя"
                                            Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <DataGrid x:Name="MoveDataGrid"
                          Style="{StaticResource ImageDataGridStyle}"
                          RowStyle="{StaticResource ImageDataGridRowStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Index}" 
                                            Header="Ном." 
                                            Width="55"/>
                        <DataGridTextColumn Binding="{Binding OriginalName}" 
                                            Visibility="Hidden"
                                            Header="Оригинал" 
                                            Width="*"/>
                        <DataGridTextColumn Binding="{Binding NewName}" 
                                            Header="Новое имя"
                                            Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>


        <!-- Правый столбик с действиями -->
        <Grid Grid.Row="1" Grid.Column="2" 
              Margin="0,15,15,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <local:OneMenuOption x:Name="ShowAuthorActionGrid"
                                     GroupName="ActionGroup"
                                     IsChecked="True"
                                     Command="Авторы"
                                     MouseLeftButtonDown="ShowAuthorActionGrid_MouseLeftButtonDown" />

                <local:OneMenuOption x:Name="ShowTagActionGrid"
                                     GroupName="ActionGroup"
                                     Command="Теги"
                                     MouseLeftButtonDown="ShowTagActionGrid_MouseLeftButtonDown" />

                <local:OneMenuOption x:Name="ShowReplaceActionGrid"
                                     GroupName="ActionGroup"
                                     Command="Замена"
                                     MouseLeftButtonDown="ShowReplaceActionGrid_MouseLeftButtonDown" />

                <local:OneMenuOption x:Name="ShowMoveActionGrid"
                                     GroupName="ActionGroup"
                                     Command="Перестановка"
                                     MouseLeftButtonDown="ShowMoveActionGrid_MouseLeftButtonDown" />
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid Name="AuthorActionGrid">
                    <Border Background="#fff"
                            BorderBrush="black"
                            BorderThickness="1.8"
                            CornerRadius="10" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="NoAuthorText"
                                       Grid.Row="1"
                                       Text="Авторы не найдены"
                                       TextWrapping="Wrap"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center"
                                       Foreground="#999"
                                       FontStyle="Italic"
                                       Visibility="Visible"/>

                            <!-- Список авторов -->
                            <ScrollViewer Grid.Row="1"
                                          Margin="10,10,10,10"
                                          VerticalScrollBarVisibility="Auto">
                                <WrapPanel x:Name="AuthorsWrapPanel"
                                           Orientation="Horizontal">
                                    <!-- Авторы будут добавляться динамически -->

                                </WrapPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Name="MoveActionGrid" 
                      Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="125" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="125" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Margin="0,10,0,0"
                                   Text="Перестановка:"
                                   VerticalAlignment="Top"/>
                        <TextBox Grid.Column="1"
                                 TextWrapping="Wrap"
                                 x:Name="TemplateTextBox" 
                                 Text="{Binding NameMoveTemplate, 
                                        UpdateSourceTrigger=PropertyChanged,
                                        Mode=TwoWay}"/>
                    </Grid>

                    <StackPanel Grid.Row="3"
                                Margin="0,10,0,0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top">
                        <local:Controller Purpose="Action"                      
                                          Command="Предпросмотр"
                                          MouseLeftButtonDown="PreviewMove_MouseLeftButtonDown" />

                        <local:Controller Margin="10,0,0,0"
                                          Purpose="Action"                      
                                          Command="Переименовать"
                                          MouseLeftButtonDown="RenameMove_MouseLeftButtonDown" />
                    </StackPanel>
                </Grid>

                <Grid Name="ReplaceActionGrid" 
                      Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="115" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Margin="0,10,0,0"
                                   Text="Найти слово:"
                                   VerticalAlignment="Top"/>
                        <TextBox Grid.Column="1"
                                 TextWrapping="Wrap"
                                 x:Name="FindTextBox" 
                                 Text="{Binding FindTemplate, 
                                                UpdateSourceTrigger=PropertyChanged,
                                                Mode=TwoWay}"/>
                    </Grid>

                    <Grid Grid.Row="1" 
                          Margin="0,10,0,0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="115" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Margin="0,10,0,0"
                                   Text="Заменить на:"
                                   VerticalAlignment="Top"/>
                        <TextBox Grid.Column="1"
                                 TextWrapping="Wrap"
                                 x:Name="ReplaceTextBox" 
                                 Text="{Binding ReplaceTemplate, 
                                                UpdateSourceTrigger=PropertyChanged,
                                                Mode=TwoWay}"/>
                    </Grid>

                    <WrapPanel Grid.Row="2"
                               Margin="0,10,0,0"            
                               Orientation="Horizontal"
                               HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="PositionStart"                            
                                         Content="Начало" 
                                         GroupName="PositionGroup" />
                            <RadioButton x:Name="PositionBeforeNumber"
                                         Margin="10,0,0,0"
                                         Content="Перед числом" 
                                         GroupName="PositionGroup" />
                        </StackPanel>

                        <StackPanel Margin="0,5,0,0"
                                    Orientation="Horizontal">
                            <RadioButton x:Name="PositionEnd"  
                                         Content="Конец" 
                                         GroupName="PositionGroup" />
                            <RadioButton x:Name="PositionReplace"
                                         Margin="10,0,0,0"
                                         IsChecked="True"
                                         Content="Заменить собой" 
                                         GroupName="PositionGroup" />
                        </StackPanel>
                    </WrapPanel>

                    <StackPanel Grid.Row="5"
                                Margin="0,10,0,0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top">
                        <local:Controller Purpose="Action"                      
                                          Command="Предпросмотр"
                                          MouseLeftButtonDown="PreviewReplace_MouseLeftButtonDown" />

                        <local:Controller Margin="10,0,0,0"
                                          Purpose="Action"                      
                                          Command="Переименовать"
                                          MouseLeftButtonDown="RenameReplace_MouseLeftButtonDown" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>




        
        <!--Внизу-->
        <local:Controller x:Name="Cancel"
                          Grid.Row="1" Grid.Column="1"
                          Margin="0,0,15,15"
                          Purpose="Action"                      
                          Command="||"
                          Visibility="Collapsed"
                          HorizontalAlignment="Right"
                          MouseLeftButtonDown="Cancel_MouseLeftButtonDown" />

        <TextBlock Name="Count" 
                   Grid.Row="3" Grid.Column="1"
                   Margin="25,0,0,10"
                   Width="150" Height="24"  
                   HorizontalAlignment="Left"
                   TextAlignment="Left" />

        <TextBlock Name="SelectedFolder"
                   Grid.Row="3" 
                   Margin="25,0,0,10"
                   Text="Папка не выбрана"
                   Height="24"  
                   HorizontalAlignment="Left"
                   TextAlignment="Left"
                   TextWrapping="Wrap"/>



        <!-- Панель управления загрузкой -->
        <StackPanel Grid.Row="2" Grid.Column="1"
                    Margin="0,0,0,15"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <local:Controller x:Name="ChooseImage"
                              Purpose="Action"                      
                              Command="Выбрать файл"
                              MouseLeftButtonDown="ChooseImage_MouseLeftButtonDown" />

            <local:Controller x:Name="LoadFullTable"
                              Margin="10,0,0,0"
                              Purpose="Action"                      
                              Command="Загрузить таблицу"
                              MouseLeftButtonDown="LoadFullTable_MouseLeftButtonDown" />

            <local:Controller x:Name="CleanEverything"
                              Margin="10,0,0,0"
                              Purpose="Action"                      
                              Command="Очистить"
                              MouseLeftButtonDown="CleanEverything_MouseLeftButtonDown" />
        </StackPanel>


        <StackPanel Grid.Row="2" Grid.Column="2"
                    Margin="0,0,15,15"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <local:Controller x:Name="GetNoAuthor"
                              Purpose="Action"                      
                              Command="Без автора"
                              MouseLeftButtonDown="GetNoAuthor_MouseLeftButtonDown" />

            <local:Controller x:Name="CreateFolders"
                              Margin="10,0,0,0"
                              Purpose="Action"                      
                              Command="По папкам"
                              MouseLeftButtonDown="CreateFolders_MouseLeftButtonDown" />
        </StackPanel>
    </Grid>
</Window>
